<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@android:color/white"
    tools:context=".activity.activity.Menu_Activity">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar_intro"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <android.support.design.widget.CollapsingToolbarLayout
            android:id="@+id/collapsing_toolbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fitsSystemWindows="true"
            android:background="@color/loading"
            app:layout_scrollFlags="exitUntilCollapsed|scroll">

            <ImageView
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:id="@+id/imageview1"
                android:scaleType="centerCrop"
                android:background="@drawable/loading_tray"
                app:layout_collapseMode="parallax"
                android:layout_gravity="center|top"
                android:layout_marginTop="50dp"/>



            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar_intro"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:titleTextColor="#fff"
                app:contentInsetLeft="0dp"
                app:contentInsetStart="0dp"
                app:layout_collapseMode="pin"
                android:background="@color/loading"
                app:contentInsetStartWithNavigation="0dp"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Light">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/toolbar_title"
                        android:textSize="20dp"
                        android:textStyle="bold"
                        android:layout_marginLeft="15dp"
                        android:textColor="@color/white"
                        android:text="Procedure to Loading Tray"
                        style="@style/TextAppearance.AppCompat.Widget.ActionBar.Title"/>

                </LinearLayout>

            </android.support.v7.widget.Toolbar>
        </android.support.design.widget.CollapsingToolbarLayout>
    </android.support.design.widget.AppBarLayout>


    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:layout_gravity="fill_vertical"
        android:background="@color/loading"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/loading"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                android:gravity="center"
                android:id="@id/linear1">

            <TextView
                android:id="@+id/one"
                android:text="1"
                android:textSize="40dp"
                android:textColor="#4a666c"
                android:textStyle="bold"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.2"
                android:layout_gravity="center"
                android:layout_marginLeft="15dp"/>


            <TextView
                android:textColor="#133a43"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:layout_weight="1.8"
                android:gravity="center|start"
                android:id="@+id/text1"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="15dp"
                android:text="Trays should be cleaned with soft cloth and mild dish-washing liquid before use. Excess water/ juice should be drained off from the sliced  material before loading."
               />

</LinearLayout>

            <LinearLayout
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                android:gravity="center"
                android:id="@id/linear1">

                <TextView
                    android:id="@+id/two"
                    android:text="2"
                    android:textSize="40dp"
                    android:textColor="#4a666c"
                    android:textStyle="bold"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.2"
                    android:layout_gravity="center"
                    android:layout_marginLeft="15dp"/>


                <TextView
                    android:textColor="#133a43"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textSize="16dp"
                    android:layout_weight="1.8"
                    android:gravity="center|start"
                    android:id="@+id/text2"
                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="15dp"
                    android:text="70-80% of the area on the trays should be evenly covered with the single layer of material to be dried.20-30% of the black surface should be evenly exposed to solar radiations, it will act as a heat-absorber."
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                android:gravity="center"
                android:id="@id/linear1">

                <TextView
                    android:id="@+id/three"
                    android:text="3"
                    android:textSize="40dp"
                    android:textColor="#4a666c"
                    android:textStyle="bold"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.2"
                    android:layout_gravity="center"
                    android:layout_marginLeft="15dp"/>


                <TextView
                    android:textColor="#133a43"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textSize="16dp"
                    android:layout_weight="1.8"
                    android:gravity="center|start"
                    android:id="@+id/text3"
                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="15dp"
                    android:text="It is recommended to load dryers in the morning as early as possible. It  is also recommended to unload dryers when the product is dried."
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                android:gravity="center"
                android:id="@id/linear1">

                <TextView
                    android:id="@+id/four"
                    android:text="4"
                    android:textSize="40dp"
                    android:textColor="#4a666c"
                    android:textStyle="bold"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.2"
                    android:layout_gravity="center"
                    android:layout_marginLeft="15dp"/>


                <TextView
                    android:textColor="#133a43"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textSize="16dp"
                    android:layout_weight="1.8"
                    android:gravity="center|start"
                    android:id="@+id/text4"
                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="15dp"
                    android:text="In case the material is very sticky, it should be turned up side down, intermediately, to avoid sticking to the trays."
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                android:gravity="center"
                android:id="@id/linear1">

                <TextView
                    android:id="@+id/five"
                    android:text="5"
                    android:textSize="40dp"
                    android:textColor="#4a666c"
                    android:textStyle="bold"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.2"
                    android:layout_gravity="center"
                    android:layout_marginLeft="15dp"/>


                <TextView
                    android:textColor="#133a43"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textSize="16dp"
                    android:layout_weight="1.8"
                    android:gravity="center|start"
                    android:id="@+id/text5"
                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="15dp"
                    android:text="In last stage of drying, material should be inspected to prevent over-drying."
                    />

            </LinearLayout>
        </LinearLayout>

</android.support.v4.widget.NestedScrollView>
    </android.support.design.widget.CoordinatorLayout>
