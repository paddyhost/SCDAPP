<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@android:color/white"
    tools:context=".activity.activity.Menu_Activity">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar_intro"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <android.support.design.widget.CollapsingToolbarLayout
            android:id="@+id/collapsing_toolbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fitsSystemWindows="true"
            android:background="@color/loading"
            app:layout_scrollFlags="scroll|exitUntilCollapsed">



            <ImageView
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:id="@+id/imageview1"
                android:scaleType="centerCrop"
                android:background="@mipmap/loading_tray"
                app:layout_collapseMode="parallax"
                android:layout_gravity="center|top"
                android:layout_marginTop="65dp"/>



            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar_intro"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:titleTextColor="#fff"
                app:contentInsetLeft="0dp"
                app:contentInsetStart="0dp"
                app:layout_collapseMode="pin"
                android:background="@color/loading"
                app:contentInsetStartWithNavigation="0dp"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Light">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/toolbar_title"
                        android:textSize="20dp"
                        android:textStyle="bold"
                        android:layout_marginLeft="20dp"
                        android:textColor="@color/white"
                        android:text="Factors Affecting Solar Drying"
                        style="@style/TextAppearance.AppCompat.Widget.ActionBar.Title"/>

                </LinearLayout>

            </android.support.v7.widget.Toolbar>
        </android.support.design.widget.CollapsingToolbarLayout>
    </android.support.design.widget.AppBarLayout>


    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:background="@color/loading"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/loading"
            android:orientation="vertical">

       <!-- <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/factor"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_marginLeft="80dp"
            android:textColor="#133a43"
            android:text="Factors Affecting Solar Drying"
            android:layout_below="@+id/image_intro"
            android:layout_marginTop="30dp"
            android:layout_centerHorizontal="true"/>
-->

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/factor1"
            android:textSize="18dp"
            android:textColor="#133a43"
            android:text="The drying time is very subjective entity and it depends on variety of factors such as:"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="15dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_marginTop="15dp">

            <TextView
                android:id="@+id/one"
                android:text="1"
                android:layout_weight="0.1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="25dp"
                android:textColor="#4a666c"
                android:layout_gravity="center"
                android:textStyle="bold"
                android:layout_marginLeft="17dp"/>


            <TextView
                android:layout_weight="1.8"
                android:layout_marginLeft="10dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/text1"
                android:textSize="16dp"
                android:gravity="center|start"
                android:textColor="#133a43"
                android:text="Slices/ cuts and layer Depth of the Drying Material"
                />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_marginTop="15dp">

            <TextView
                android:id="@+id/two"
                android:text="2"
                android:layout_weight="0.1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="25dp"
                android:textColor="#4a666c"
                android:layout_gravity="center"
                android:textStyle="bold"
                android:layout_marginLeft="15dp"/>


            <TextView
                android:layout_weight="1.8"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:textSize="16dp"
                android:gravity="center|start"
                android:textColor="#133a43"
                android:layout_marginLeft="10dp"
                android:id="@+id/text2"
                android:text="Solar Radiation Intensity" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_marginTop="15dp">

            <TextView
                android:id="@+id/three"
                android:text="3"
                android:layout_weight="0.1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="25dp"
                android:textColor="#4a666c"
                android:layout_gravity="center"
                android:textStyle="bold"
                android:layout_marginLeft="15dp"/>


            <TextView
                android:layout_weight="1.8"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:textSize="16dp"
                android:gravity="center|start"
                android:textColor="#133a43"
                android:layout_marginLeft="10dp"
                android:id="@+id/text3"
                android:text="Ambient Temperature" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/linear4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_marginTop="15dp">

            <TextView
                android:id="@+id/four"
                android:text="4"
                android:layout_weight="0.1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="25dp"
                android:textColor="#4a666c"
                android:layout_gravity="center"
                android:textStyle="bold"
                android:layout_marginLeft="15dp"/>


            <TextView
                android:layout_weight="1.8"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:textSize="16dp"
                android:gravity="center|start"
                android:textColor="#133a43"
                android:layout_marginLeft="10dp"
                android:id="@+id/text4"
                android:text="Relative Humidity" />

        </LinearLayout>


    </LinearLayout>

  </android.support.v4.widget.NestedScrollView>
    </android.support.design.widget.CoordinatorLayout>

